<%= form_for([@post.meeting, @post], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% if @post.description.nil? %>
        <% if !Meeting.find(params[:meeting_id]).usermeetings.find_by_user_id(current_user.id).nil? %>
          <%= f.text_area :description, class: "form-control", value: "Sorry I will not be able to attend..."  %>
        <% else %>
          <%= f.text_area :description, class: "form-control", value: "I'll be there too."  %>
        <% end %>
      <% else %>
        <%= f.text_area :description, class: "form-control", value: @post.description %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <% if @post.id.nil? %>
        <% if Meeting.find(params[:meeting_id]).usermeetings.find_by_user_id(current_user.id).nil? %>
        <!-- no record for this meeting id and user id in usermeeting table  -->
          <%= f.submit "Join", class: "btn btn-primary" %>
        <% else %>
        <!-- record for this meeting id and user id already exist in usermeeting table  -->
          <%= f.submit "Unjoin", class: "btn btn-primary" %>
        <% end %>
      <% else %>
      <!-- post id is not nil (for edit) -->
        <%= f.submit "Edit Reply", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

<% end %>
